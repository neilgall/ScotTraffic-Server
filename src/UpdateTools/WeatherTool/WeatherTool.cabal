synopsis:            ScotTraffic weather updater
author:              Neil Gall
maintainer:          neilgall@mac.com
build-type:          Simple
cabal-version:       >=1.10

executable WeatherTool
  main-is:             Main.hs
  
  other-modules:       MetOffice.DataPoint
  
