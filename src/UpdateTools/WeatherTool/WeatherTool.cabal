                       base           >=4.9  && <4.10,
                       bytestring     >=0.10 && <0.11,
                       mtl            >=2.2  && <2.3,
                       text           >=1.2  && <1.3,
                       transformers   >=0.5  && <0.6,
                       ScotTraffic    >=0.1  && <0.2
                       
  -- hs-source-dirs:      
  default-language:    Haskell2010